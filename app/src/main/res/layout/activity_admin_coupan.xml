<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant_light"
    tools:context=".ui.activity.RetailerCoupanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llCard"
        android:orientation="vertical"
        android:padding="6dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 -P-coupon : Physical Pan Card send your address"/>

        <TextView
            android:id="@+id/tvDes2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 -E-coupon : Only Electronic Pan Card send in your Email" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="User Id :"
            android:textColor="@color/black" />

        <View
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="@color/blue" />

        <EditText
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:autofillHints="name"
            android:background="@drawable/edit_border"
            android:gravity="center"
            android:hint="By Default User Id" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Select Coupon type :"
            android:textColor="@color/black" />

        <View
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="@color/blue" />

        <EditText
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:autofillHints="name"
            android:background="@drawable/edit_border"
            android:gravity="center"
            android:hint="P - Coupon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="3dp"
            android:text="No. Of Coupon :"
            android:textColor="@color/black" />

        <View
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="@color/blue" />

        <EditText
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:autofillHints="name"
            android:background="@drawable/edit_border"
            android:gravity="center"
            android:hint="No. Of Coupon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Mobile No. :"
            android:textColor="@color/black" />

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:background="@color/blue" />

        <EditText
            android:layout_width="190dp"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="2dp"
            android:autofillHints="name"
            android:background="@drawable/edit_border"
            android:gravity="center"
            android:hint="Enter your mobile no." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="130dp"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="3dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">


                <TextView
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="Pay Now "
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!--        <Button-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="Pay Now" />-->
    </LinearLayout>
</RelativeLayout>