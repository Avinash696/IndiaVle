<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back4"
        android:orientation="vertical"
        android:weightSum="3"
        tools:context=".ui.activity.TicketActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llAdult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adult (12 +YRs)"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/lvAdultCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/ivAddDetails"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:src="@drawable/add" />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llChild"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/llAdult"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Child 2-11 Yrs"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/lvChildCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/ivAddDetailsChild"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:src="@drawable/add" />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llInfant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/llChild"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Infant 0-2 YRs"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <ListView
                    android:id="@+id/lvInfantCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/ivAddDetailsInfant"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:src="@drawable/add" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btSaveTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:backgroundTint="@color/green"
            android:text="Save Passenger" />
    </LinearLayout>

</layout>