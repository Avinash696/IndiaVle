<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.HotelActivity"
    android:background="@drawable/hotel_background">


        <androidx.cardview.widget.CardView
            android:id="@+id/cvDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="10dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradiant_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular"
                            android:gravity="center_vertical"
                            android:text="Choose Destination"
                            android:textSize="15sp"
                            android:textColor="@color/cyan"/>

                        <View
                            android:layout_width="@dimen/view_width"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/mid_color"
                            android:background="@color/seperator" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Enter Origin" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular"
                            android:gravity="center_vertical"
                            android:text="Check-In"
                            android:textSize="15sp"
                            android:textColor="@color/cyan"/>

                        <View
                            android:layout_width="@dimen/view_width"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/mid_color"
                            android:background="@color/seperator" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Select CheckIn" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular"
                            android:gravity="center_vertical"
                            android:text="Check-Out"
                            android:textSize="15sp"
                            android:textColor="@color/cyan"/>

                        <View
                            android:layout_width="@dimen/view_width"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/mid_color"
                            android:background="@color/seperator" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:hint="Select Checkout" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular"
                            android:gravity="center_vertical"
                            android:text="Adult(12+YRS)"
                            android:textSize="15sp"
                            android:textColor="@color/cyan"/>

                        <View
                            android:layout_width="@dimen/view_width"
                            android:layout_height="10dp"
                            android:layout_margin="@dimen/mid_color"
                            android:background="@color/seperator" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <!--                        <TextView-->
                            <!--                            android:layout_width="wrap_content"-->
                            <!--                            android:layout_height="wrap_content"-->
                            <!--                            android:text="O Passenger" />-->
                        </Spinner>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular"
                            android:gravity="center_vertical"
                            android:text="Children(2-11 YRS)"
                            android:textSize="15sp"
                            android:textColor="@color/cyan"/>

                        <View
                            android:layout_width="@dimen/view_width"
                            android:layout_height="10sp"
                            android:layout_margin="@dimen/mid_color"
                            android:background="@color/seperator" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint=" Contact No." />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular"
                            android:gravity="center_vertical"
                            android:text="Infant(0-2 YRS)"
                            android:textSize="15sp"
                            android:textColor="@color/cyan"/>

                        <View
                            android:layout_width="@dimen/view_width"
                            android:layout_height="10sp"
                            android:layout_margin="@dimen/mid_color"
                            android:background="@color/seperator" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Enter Alt No." />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular"
                            android:gravity="center_vertical"
                            android:text="Room"
                            android:textSize="15sp"
                            android:textColor="@color/cyan"/>

                        <View
                            android:layout_width="@dimen/view_width"
                            android:layout_height="10sp"
                            android:layout_margin="@dimen/mid_color"
                            android:background="@color/seperator" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Enter Education" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/regular"
                            android:gravity="center_vertical"
                            android:text="Nights"
                            android:textSize="15sp"
                            android:textColor="@color/cyan"/>

                        <View
                            android:layout_width="@dimen/view_width"
                            android:layout_height="10sp"
                            android:layout_margin="@dimen/mid_color"
                            android:background="@color/seperator" />

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="test"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="70dp"
                        app:cardBackgroundColor="#5B7FE3"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp"
                        app:cardMaxElevation="10dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true"
                        android:layout_centerInParent="true"
                        android:padding="4dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Search Hotel"
                            android:textSize="15sp"
                            android:textColor="#6200EA"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


</RelativeLayout>